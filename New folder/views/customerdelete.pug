extends layout
block content

    h1= title
    if (toShow == null)
        h2 No instance to delete
    else
        - let customerid = toShow._id
        - let customername = toShow.Cust_Name
        - let customerage = toShow.Cust_Age
        - let mailid = toShow.Mail_Id
        - let actionid = "/resource/customers/" + customerid
        script. 
            let actionid = "#{actionid}"
        div
            div.row
                div(class='costumeAttr mr-3') Customer ID is:
                div #{customerid}
            div.row
                div(class='costumeAttr mr-3') Customer Name is:
                div #{customername}
            div.row
                div(class='costumeAttr mr-3') Customer Age is:
                div #{customerage}
            div.row
                div(class='costumeAttr mr-3') Mail Id is:
                div #{mailid}
            button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
            button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
    script.
        function cancel() {
            // Go back to the home page for the costume collection
            window.location.href='/customer'
        }
    script.
        function deleteOnid() {
            console.log("starting delete")
            // delete first
            fetch(actionid, {
                method: 'DELETE' // Don't need a body for the delete
            }).then((resp) => {
                return resp.json(); // or resp.text() or whatever the server sends
            }).then((body) => {
                alert("Delete succeded")
                window.location.href='/customer'
                // TODO handle body
            }).catch((error) => {
                // TODO handle error
                alert("Delete failed " + error )
            });
        }
